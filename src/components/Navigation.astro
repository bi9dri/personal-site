---
import { Icon } from 'astro-icon/components';
import { NAV_ITEMS } from '../config';

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;
---

<nav class="flex gap-2 flex-wrap">
  {NAV_ITEMS.map((item) => (
    <a
      href={item.href}
      class:list={[
        'px-4 py-2 rounded transition-colors inline-flex items-center',
        item.internal && currentPath === item.href
          ? 'bg-primary text-white'
          : 'text-primary-dark hover:bg-primary-light',
      ]}
      target={item.internal ? undefined : '_blank'}
      rel={item.internal ? undefined : 'noopener noreferrer'}
    >
      <span>{item.label}</span>
      {!item.internal && (
        <Icon name="heroicons-outline:external-link" class="ml-1 inline-block" />
      )}
    </a>
  ))}
</nav>
