---
interface Props {
  items: string[];
}

const { items } = Astro.props;
---

<div class="scrollable-list max-h-[calc(1.6em*5.5+1rem)] overflow-y-auto bg-white border border-border rounded p-sm px-md mb-md relative">
  <ul class="m-0 list-inside">
    {items.map((item) => (
      <li class="mb-xs">{item}</li>
    ))}
  </ul>
</div>

<style>
  .scrollable-list::after {
    content: "";
    position: sticky;
    bottom: 0;
    left: 0;
    right: 0;
    height: 30px;
    background: linear-gradient(to bottom, transparent, white);
    pointer-events: none;
    border-radius: 0 0 8px 8px;
  }

  .scrollable-list::-webkit-scrollbar {
    width: 8px;
  }

  .scrollable-list::-webkit-scrollbar-track {
    background: #f8fafc;
    border-radius: 8px;
  }

  .scrollable-list::-webkit-scrollbar-thumb {
    background: #dbeafe;
    border-radius: 8px;
    transition: background 150ms ease;
  }

  .scrollable-list::-webkit-scrollbar-thumb:hover {
    background: #2563eb;
  }
</style>
